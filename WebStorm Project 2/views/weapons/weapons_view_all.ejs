<!DOCTYPE html>
<html>
<head>
    <title>Weapons - All</title>
</head>
<style>
    body{
        font-family: Calibri, Arial, sans-serif;
    }
    table, th, td {
        width: 1em;
        min-width: 1em;
        max-width: 30em;
        border: 1px solid black;
        border-collapse: collapse;
        white-space: nowrap;
    }
    th, td {
        padding: .2em;
    }
    th {
        text-align: center;
    }
    caption{
        text-align: left;
        font-size: 2em;
    }
    input{
        width: calc(100% - .5em);
        min-width: 4em;
        max-width: 30em;
    }
    div.subtext {
        font-size: .7em;
        color: dimgray;
        font-style: italic;
        font-weight: normal;
    }
    caption{
        font-variant: small-caps;
    }
</style>
    <body>
        <form action="/insert" method="get">
            <table>
                <caption>Weapons</caption>
                <tr>
                    <th rowspan="2" style="line-height: 1">Name, Infusion<br><div class="subtext">click to got to weapon page, edit, delete</divsubtext></th>
                    <th rowspan="2">Class</th>
                    <th rowspan="2">Critical<br>Modifier</th>
                    <th rowspan="2">Durability</th>
                    <th rowspan="2">Weight</th>
                    <th rowspan="2">Upgrade<br>Material</th>
                    <th colspan="5">Base Damage</th>
                    <th colspan="4">Scaling</th>
                    <th colspan="4">Requirements</th>
                </tr>
                <tr>
                    <th>Physical</th>
                    <th>Magic</th>
                    <th>Fire</th>
                    <th>Lightning</th>
                    <th>Dark</th>
                    <th>Strength</th>
                    <th>Dexterity</th>
                    <th>Intelligence</th>
                    <th>Faith</th>
                    <th>Strength</th>
                    <th>Dexterity</th>
                    <th>Intelligence</th>
                    <th>Faith</th>
                </tr>
                <tr style="vertical-align: top;">
                    <td>
                        <input name="New_Wep_Name" type = "text" placeholder = "New Weapon Name" style="width: auto; float: left" required>,
                        <select id = new_wep_infus name="New_Wep_Infus" style="width: auto; float: right">
                            <option value = "Normal">Normal
                            <option disabled>─────</option>
                            <option value = "Raw">Raw
                            <option value = "Fire">Fire
                            <option value = "Deep">Deep
                            <option disabled>─────</option>
                            <option value = "Heavy">Heavy
                            <option value = "Sharp">Sharp
                            <option value = "Refined">Refined
                            <option disabled>─────</option>
                            <option value = "Simple">Simple
                            <option value = "Crystal">Crystal
                            <option disabled>─────</option>
                            <option value = "Blessed">Blessed
                            <option value = "Lightning">Lightning
                            <option disabled>─────</option>
                            <option value = "Chaos">Chaos
                            <option value = "Dark">Dark
                            <option disabled>─────</option>
                            <option value = "Blood">Blood
                            <option value = "Poison">Poison
                            <option value = "Hollow">Hollow
                        </select>
                    </td>
                    <td>
                        <select name="New_Wep_Class">
                            <option value = "Dagger">Dagger
                            <option value = "Straight Sword">Straight Sword
                            <option value = "Greatsword">Greatsword
                            <option value = "Ultra Greatsword">Ultra Greatsword
                            <option disabled>─────────</option>
                            <option value = "Curved Sword">Curved Sword
                            <option value = "Curved Greatsword">Curved Greatsword
                            <option disabled>─────────</option>
                            <option value = "Katana">Katana
                            <option disabled>─────────</option>
                            <option value = "Piercing Sword">Piercing Sword
                            <option disabled>─────────</option>
                            <option value = "Axe">Axe
                            <option value = "Greataxe">Greataxe
                            <option disabled>─────────</option>
                            <option value = "Hammer">Hammer
                            <option value = "Great Hammer">Great Hammer
                            <option disabled>─────────</option>
                            <option value = "Claw">Claw
                            <option value = "Fist">Fist
                            <option disabled>─────────</option>
                            <option value = "Spear">Spear
                            <option value = "Pike">Pike
                            <option disabled>─────────</option>
                            <option value = "Halberd">Halberd
                            <option value = "Reaper">Reaper
                            <option disabled>─────────</option>
                            <option value = "Whip">Whip
                            <option disabled>─────────</option>
                            <option value = "Bow">Bow
                            <option value = "Greatbow">Greatbow
                            <option value = "Crossbow">Crossbow
                            <option disabled>─────────</option>
                            <option value = "Stave">Stave
                            <option value = "Pyromancy Flame">Pyromancy Flame
                            <option value = "Talisman">Talisman
                            <option value = "Sacred Chime">Sacred Chime
                            <option disabled>─────────</option>
                            <option value = "Small Shield">Small Shield
                            <option value = "Medium Shield">Medium Shield
                            <option value = "Great Shield">Great Shield
                        </select>
                    </td>
                    <td><input name="New_Wep_Crit" type = "number" min = "100" step = "1" placeholder = "100+"></td>
                    <td><input name="New_Wep_Dur" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td><input name="New_Wep_Weight" type = "number" min = "0" step = ".1" placeholder = "0.0+"></td>
                    <td>
                        <select name="New_Is_Scale_Up">
                            <option value = "2">Titanite
                            <option value = "1">Twinkling Titanite
                            <option value = "0">Titanite Scale
                        </select>
                    </td>
                    <td><input name="New_Phy_Dmg" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td><input name="New_Mag_Dmg" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td><input name="New_Fir_Dmg" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td><input name="New_Lit_Dmg" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td><input name="New_Drk_Dmg" type = "number" min = "0" step = "1" placeholder = "0+"></td>
                    <td>
                        <select name="New_Str_Grad" style="width:100%">
                            <option value = "-">-
                            <option value = "S">S
                            <option value = "A">A
                            <option value = "B">B
                            <option value = "C">C
                            <option value = "D">D
                            <option value = "E">E
                        </select>
                    </td>
                    <td>
                        <select name="New_Dex_Grad"style="width:100%">
                            <option value = "-">-
                            <option value = "S">S
                            <option value = "A">A
                            <option value = "B">B
                            <option value = "C">C
                            <option value = "D">D
                            <option value = "E">E
                        </select>
                    </td>
                    <td>
                        <select name="New_Int_Grad"style="width:100%">
                            <option value = "-">-
                            <option value = "S">S
                            <option value = "A">A
                            <option value = "B">B
                            <option value = "C">C
                            <option value = "D">D
                            <option value = "E">E
                        </select>
                    </td>
                    <td>
                        <select name="New_Fat_Grad"style="width:100%">
                            <option value = "-">-
                            <option value = "S">S
                            <option value = "A">A
                            <option value = "B">B
                            <option value = "C">C
                            <option value = "D">D
                            <option value = "E">E
                        </select>
                    </td>
                    <td><input name="New_Str_Req" type = "number" min = "0" max = "99" step = "1" placeholder = "0-99"></td>
                    <td><input name="New_Dex_Req" type = "number" min = "0" max = "99" step = "1" placeholder = "0-99"></td>
                    <td><input name="New_Int_Req" type = "number" min = "0" max = "99" step = "1" placeholder = "0-99"></td>
                    <td><input name="New_Fat_Req" type = "number" min = "0" max = "99" step = "1" placeholder = "0-99"></td>
                </tr>
                <tr>
                    <td colspan="20">
                        <input type="submit" value="Add New Weapon" style="width:100%; max-width:100%;">
                    </td>
                </tr>
                <% for (var i = 0; i < weapons.length; i++){ %>
                    <tr id="weapon_data">
                        <td>
                            <a href="/weapon/?wep_name=<%= weapons[i].Wep_Name %>&wep_infusion=<%= weapons[i].Wep_Infus %>">
                                <%= weapons[i].Wep_Name %>, <%= weapons[i].Wep_Infus %>
                            </a>
                        </td>
                        <td><%= weapons[i].Wep_Class %></td>
                        <td><%= weapons[i].Wep_Crit %></td>
                        <td><%= weapons[i].Wep_Dur %></td>
                        <td><%= weapons[i].Wep_Weight %></td>
                        <td><%= weapons[i].Is_Scale_Up %></td>
                        <td><%= weapons[i].Phy_Dmg %></td>
                        <td><%= weapons[i].Mag_Dmg %></td>
                        <td><%= weapons[i].Fir_Dmg %></td>
                        <td><%= weapons[i].Lit_Dmg %></td>
                        <td><%= weapons[i].Drk_Dmg %></td>
                        <td><%= weapons[i].Str_Grad %></td>
                        <td><%= weapons[i].Dex_Grad %></td>
                        <td><%= weapons[i].Int_Grad %></td>
                        <td><%= weapons[i].Fat_Grad %></td>
                        <td><%= weapons[i].Str_Req %></td>
                        <td><%= weapons[i].Dex_Req %></td>
                        <td><%= weapons[i].Int_Req %></td>
                        <td><%= weapons[i].Fat_Req %></td>
                    </tr>
                <% } %>
            </table>
        </form>
    </body>
</html>